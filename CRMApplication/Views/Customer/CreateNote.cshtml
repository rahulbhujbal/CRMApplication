@model CRMApplication.Note

@{
    ViewBag.Title = "CreateNote";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>

<h2>Note for @Model.Customer.FullName</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Note</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NoteBody, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.NoteBody, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextAreaFor(model => model.NoteBody, new { cols = "40", rows = "5", wrap = "virtual" })
                @Html.ValidationMessageFor(model => model.NoteBody, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.CustomerId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Select", new { id=Model.CustomerId })
</div>

<script type="text/javascript">
    $(function () { // will trigger when the document is ready
       $('.datepicker').datepicker(); //Initialise any date pickers
    });
</script>